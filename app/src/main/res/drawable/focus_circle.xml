<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer circle -->
    <item>
        <shape android:shape="oval">
            <stroke
                android:width="2dp"
                android:color="#FFFFFF" />
            <size
                android:width="80dp"
                android:height="80dp" />
        </shape>
    </item>
    <!-- Inner circle -->
    <item
        android:left="20dp"
        android:top="20dp"
        android:right="20dp"
        android:bottom="20dp">
        <shape android:shape="oval">
            <stroke
                android:width="1.5dp"
                android:color="#FFFFFF" />
        </shape>
    </item>
    <!-- Center dot -->
    <item
        android:left="38dp"
        android:top="38dp"
        android:right="38dp"
        android:bottom="38dp">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" />
        </shape>
    </item>
</layer-list> 