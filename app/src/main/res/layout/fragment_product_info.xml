<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/search_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/product_code_input_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:hint="@string/product_search_hint">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/product_code_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#DE000000"
                    android:inputType="text" />

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:baselineAligned="false">

                <Button
                    android:id="@+id/search_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/search_button" />

            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/product_details_card"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:visibility="gone"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_card"
        tools:visibility="visible">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp">

                <TextView
                    android:id="@+id/product_details_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/product_details"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <!-- Location section with LARGE text -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/location_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="#F5F5F5"
                    app:cardBackgroundColor="#F5F5F5"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="0dp"
                    app:layout_constraintTop_toBottomOf="@id/product_details_title">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:text="@string/product_location_label"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/product_location_value"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:letterSpacing="0.1"
                            android:textColor="#006064"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            tools:text="A1B2" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Details Grid using ConstraintLayout -->
                <TextView
                    android:id="@+id/product_code_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/product_code_label"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/location_card" />

                <TextView
                    android:id="@+id/product_code_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textSize="14sp"
                    app:layout_constraintBaseline_toBaselineOf="@id/product_code_label"
                    app:layout_constraintStart_toEndOf="@id/product_code_label"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="ABC123" />
                    
                <!-- Barcode field in details section -->
                <TextView
                    android:id="@+id/product_barcode_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/product_barcode_label"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/product_code_label" />

                <TextView
                    android:id="@+id/product_barcode_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textSize="14sp"
                    app:layout_constraintBaseline_toBaselineOf="@id/product_barcode_label"
                    app:layout_constraintStart_toEndOf="@id/product_barcode_label"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="6912345678901" />

                <TextView
                    android:id="@+id/product_name_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/product_name_label"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/product_barcode_label" />

                <HorizontalScrollView
                    android:id="@+id/product_name_scroll"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:scrollbars="none"
                    app:layout_constraintTop_toTopOf="@id/product_name_label"
                    app:layout_constraintBottom_toBottomOf="@id/product_name_label"
                    app:layout_constraintStart_toEndOf="@id/product_name_label"
                    app:layout_constraintEnd_toEndOf="parent">

                    <TextView
                        android:id="@+id/product_name_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textSize="14sp"
                        tools:text="Product Name that can be very long and will scroll horizontally" />
                </HorizontalScrollView>

                <TextView
                    android:id="@+id/product_desc_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/product_desc_label"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/product_name_label" />

                <HorizontalScrollView
                    android:id="@+id/product_desc_scroll"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="2dp"
                    android:scrollbars="none"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/product_desc_label"
                    app:layout_constraintEnd_toEndOf="parent">
                    
                    <TextView
                        android:id="@+id/product_desc_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textSize="14sp"
                        tools:text="Product Description that can be very long and will scroll horizontally instead of using multiple lines" />
                </HorizontalScrollView>

                <!-- Bottom section with important metrics -->
                <TextView
                    android:id="@+id/product_quantity_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/product_quantity_label"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/product_desc_scroll" />

                <TextView
                    android:id="@+id/product_quantity_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintBaseline_toBaselineOf="@id/product_quantity_label"
                    app:layout_constraintStart_toEndOf="@id/product_quantity_label"
                    tools:text="100" />

                <TextView
                    android:id="@+id/product_cost_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/product_cost_label"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/product_quantity_label" />

                <TextView
                    android:id="@+id/product_cost_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textSize="14sp"
                    app:layout_constraintBaseline_toBaselineOf="@id/product_cost_label"
                    app:layout_constraintStart_toEndOf="@id/product_cost_label"
                    tools:text="$9.99" />
                
                <!-- Barcode Section -->
                <View
                    android:id="@+id/barcode_divider"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginTop="24dp"
                    android:background="#673AB7"
                    app:layout_constraintTop_toBottomOf="@id/product_cost_label" />
                    
                <androidx.cardview.widget.CardView
                    android:id="@+id/barcode_section_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardBackgroundColor="#F3E5F5"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp"
                    app:layout_constraintTop_toBottomOf="@id/barcode_divider">
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">
                        
                        <TextView
                            android:id="@+id/barcode_section_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/barcode_section_title"
                            android:textSize="18sp"
                            android:textColor="#673AB7"
                            android:textStyle="bold"
                            android:layout_marginBottom="16dp" />
                            
                        <LinearLayout
                            android:id="@+id/barcode_input_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:baselineAligned="false"
                            android:orientation="horizontal">
                            
                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/barcode_input_layout"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:boxStrokeColor="#673AB7"
                                app:boxStrokeWidth="2dp"
                                app:hintTextColor="#673AB7"
                                android:hint="@string/barcode_field_hint">
                                
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/barcode_input"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="number"
                                    android:textColor="#DE000000"
                                    android:textStyle="bold"
                                    android:textSize="16sp"
                                    android:maxLength="13" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>
                        
                        <Button
                            android:id="@+id/save_barcode_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/save_barcode_button"
                            android:enabled="false" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Add some bottom margin to ensure there's space at the end of the scrollview -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    app:layout_constraintTop_toBottomOf="@id/barcode_section_card"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </com.google.android.material.card.MaterialCardView>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>